acl clients {
    139.19.117.11;
	127.0.0.1;
};

options {

	directory "/var/cache/bind";

	listen-on port 53 { clients; };
	allow-query { clients; };

	// dnssec-validation auto;

	listen-on-v6 { any; };
};

zone "paketloss.syssec-research.mmci.uni-saarlard.de" IN {
	type master;
	file "/etc/bind/ns1.zone";
};

zone "example.com" {
	type primary;
	file "/etc/bind/example.zone";
};
